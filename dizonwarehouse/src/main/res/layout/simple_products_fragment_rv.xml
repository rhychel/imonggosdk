<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:sothree="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/tools"
                android:background="@color/products_bgcolor">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/suplProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoDragView="@+id/llProductDesription"
        >
        <!-- sothree:umanoParalaxOffset="100dp" -->
        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--android:background="?attr/colorPrimary"-->
            <!--sothree:theme="@style/ActionBar"-->

            <!---->
            <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:theme="@style/ThemeOverlay.ActionBar.Concessio"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:id="@+id/ablToolbarHolder"
                app:elevation="4dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tbActionBar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.ActionBar.Concessio"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    android:backgroundTintMode="src_over">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/spCategories"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:titleTextAppearance="@style/Toolbar.TitleText"
                        android:id="@+id/tvBranch"
                        android:text="Branch 1"
                        android:gravity="center_vertical"
                        android:visibility="gone"/>
                </android.support.v7.widget.Toolbar>
                <include
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar_extension"
                    android:visibility="gone"
                    layout="@layout/wh_toolbar_ext"/>
            </android.support.design.widget.AppBarLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/fabAdd"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ablToolbarHolder"
                android:layout_marginRight="16dp"
                android:layout_marginTop="-30dp"
                android:visibility="gone"
                android:src="@drawable/ic_add_white"
                app:elevation="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:id="@+id/llReason"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/ablToolbarHolder">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Reason"
                    android:textSize="13sp"
                    android:layout_marginLeft="61dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextView.ProductItem.Name"
                    android:id="@+id/tvReason"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_orange"
                    android:id="@+id/ivEdit"/>
            </LinearLayout>

            <net.nueca.imonggosdk.widgets.AutofitRecyclerView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvProducts"
                android:elevation="1dp"
                android:paddingBottom="150dp"
                android:clipToPadding="false"
                android:listDivider="@color/dividerL"
                android:columnWidth="@dimen/product_tile_dimens"
                android:paddingTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/llReason"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="No product results for Beef category"
                android:id="@+id/tvNoProducts"
                android:gravity="center"
                android:layout_margin="50dp"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/llReason"/>
        </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llProductDesription"
            android:clickable="true"
            android:focusable="false">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"
                android:id="@+id/ivProductImage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:id="@+id/tvProductName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvProductDescription" />
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>