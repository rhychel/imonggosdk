<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout.TextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="WarehouseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wh_colorPrimary</item>
        <item name="colorPrimaryDark">@color/wh_colorPrimaryDark</item>
        <item name="colorAccent">@color/wh_colorAccent</item>

        <item name="android:colorBackground">@color/wh_colorBackground</item>
        <item name="android:colorForeground">@color/wh_colorForeground</item>

        <item name="android:textColorPrimary">@color/wh_colorPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/wh_colorPrimaryTextInverse</item>
        <item name="android:textColorSecondary">@color/wh_colorSecondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/wh_colorSecondaryTextInverse</item>

        <item name="android:textColorHint">@color/wh_colorHintText</item>

        <item name="buttonStyle">@style/WarehouseTheme.Button.Colored</item>
        <item name="borderlessButtonStyle">@style/WarehouseTheme.Button.Borderless.Colored</item>
    </style>

    <!-- Buttons -->
    <style name="WarehouseTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/wh_colorPrimaryText</item>
    </style>

    <style name="WarehouseTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/wh_colorPrimary</item>
        <item name="android:textColor">@color/wh_colorPrimaryTextInverse</item>
    </style>

    <style name="WarehouseTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="WarehouseTheme.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <!-- Toolbar -->
    <style name="WarehouseTheme.Toolbar" parent="WarehouseTheme">
        <item name="android:textColorPrimary">@color/wh_colorPrimaryTextInverse</item>
        <item name="android:textColorPrimaryInverse">@color/wh_colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/wh_colorSecondaryTextInverse</item>
        <item name="android:textColorSecondaryInverse">@color/wh_colorSecondaryText</item>
        <item name="popupTheme">@style/WarehouseTheme.Toolbar.Popup</item>
    </style>
    <style name="WarehouseTheme.Toolbar.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/wh_colorPrimaryTextInverse</item>
    </style>
    <style name="WarehouseTheme.Toolbar.SpinnerItem.DropDown" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/wh_colorPrimaryText</item>
    </style>
    <style name="WarehouseTheme.Toolbar.Popup" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/wh_colorPrimaryText</item>
    </style>

    <style name="WarehouseTheme.InputDialog" parent="AppCompatDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>

        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <!--<item name="android:textColorPrimary">@color/primary_textL</item>-->
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="colorControlNormal">@color/primary_textL</item>
        <item name="colorControlActivated">@color/primary</item>
        <!---->
        <!--<item name="colorControlNormal">@color/primary</item>-->
        <!--<item name="colorControlActivated">@color/primary</item>-->
        <!--<item name="colorControlHighlight">@color/primary</item>-->
    </style>
</resources>