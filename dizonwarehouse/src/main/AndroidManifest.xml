<?xml version="1.0" encoding="utf-8"?>
<manifest package="net.nueca.dizonwarehouse"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/WarehouseTheme">
        <activity
            android:name=".WH_Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".WH_Welcome"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".WH_Dashboard"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".WH_Module"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".WH_Finalize"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".WH_MultiInput"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".WH_OrderMultiInput"
                  android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="net.nueca.concessioengine.activities.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Concessio.Light.NoActionBar.Form"
            android:screenOrientation="portrait"/>

        <!-- Services -->
        <service android:name="net.nueca.dizonwarehouse.services.WarehouseSwable"
                 android:enabled="true"/>

        <service android:name="net.nueca.imonggosdk.operations.sync.SyncModules"
                 android:enabled="true"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="50e2100f1a801357b9d65a4f7f38551db0df28ce" />
    </application>

</manifest>
