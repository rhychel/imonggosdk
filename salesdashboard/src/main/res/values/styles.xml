<resources>

    <style name="AppTheme.Dashboard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/d_primary</item>
        <item name="colorPrimaryDark">@color/d_primary_dark</item>
        <item name="colorAccent">@color/d_accent</item>
        <item name="android:textColorPrimary">@color/d_primary_text</item>
        <item name="android:textColorSecondary">@color/d_secondary_text</item>
    </style>


    <style name="AppTheme.Dashboard.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">monospace</item>
        <item name="colorPrimaryDark">@color/d_primary</item>
        <item name="colorPrimary">@color/d_primary</item>
        <item name="colorAccent">@color/d_accent</item>
        <item name="android:textColorPrimary">@color/d_primary_text</item>
        <item name="android:textColorSecondary">@color/d_secondary_text</item>
    </style>

    <style name="AppTheme.Dashboard.Home" parent="AppTheme.Dashboard">
        <item name="colorPrimaryDark">@color/d_primary</item>
        <item name="android:windowBackground">@color/d_primary</item>
        <item name="android:actionBarStyle">@style/AppTheme.Dashboard.Home.ActionBarStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppTheme.Dashboard.Home.ActionBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AppTheme.Dashboard.Home.ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/d_primary</item>
    </style>

    <style name="SpinnerwithNoArrow" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="navigation" parent="AppTheme.Dashboard">
        <item name="android:textSize">18sp</item>
        <item name="android:textViewStyle">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
