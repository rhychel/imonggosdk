<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Concessio.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Concessio.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:textColorSecondary">@color/secondary_textL</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>

        <!--LATER!!!-->
        <!--<item name="divider">@android:color/transparent</item>-->
        <!--<item name="android:listDivider">@color/dividerL</item>-->
    </style>


    <style name="AppTheme.Concessio" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_textL</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
    </style>

    <style name="AppTheme.Concessio.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
    </style>

    <style name="AppTheme.Concessio.DarkActionBar.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupMenu.Concessio" parent="@android:style/Widget.PopupMenu">
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="android:textColor">@color/primary_textL</item>
    </style>

    <style name="ThemeOverlay.ActionBar.Concessio" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

