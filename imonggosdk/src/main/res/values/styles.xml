    <!-- Login Theme -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorAccent">@android:color/white</item>
        <!--<item name="android:background">@color/primary</item>-->
        <item name="buttonStyle">@style/LoginTheme.Button</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="LoginTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LoginTheme.DialogFrameLayout" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHint">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
    </style>
    <!-- Login Theme - END -->

    <!-- AppCompatDialog -->
    <style name="AppCompatDialogStyle.Light.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="AppCompatDialogStyle.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>



    <style name="AppCompatDialogStyle.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:minWidth">@dimen/abc_dialog_fixed_width_major</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">false</item>
    </style>
    <!-- AppCompatDialog - END -->

    <!-- PRODUCTS LIST STYLES -->
    <style name="TextView.ProductItem.Name" parent="TextAppearance.AppCompat"></style>
    <style name="TextView.ProductItem.Quantity" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <!-- Floating Action Button -->
    <style name="FloatingActionButton.Margin" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>