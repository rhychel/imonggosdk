        <item name="colorAccent">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:textColorSecondary">@color/secondary_textL</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>

        <!--LATER!!!-->
        <!--<item name="divider">@android:color/transparent</item>-->
        <!--<item name="android:listDivider">@color/dividerL</item>-->
    </style>


    <style name="AppTheme.Concessio" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_textL</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
    </style>

    <style name="AppTheme.Concessio.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
    </style>

    <style name="AppTheme.Concessio.Light.NoActionBar.Form" parent="AppTheme.Concessio.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="AppTheme.Concessio.DarkActionBar.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupTheme">@style/PopupMenu.Concessio</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!-- Popup menu here -->
    <style name="ThemeOverlay.ActionBar.Concessio" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

