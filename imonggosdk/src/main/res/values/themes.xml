    <!-- Login Theme -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/accentLogin</item>
        <item name="android:textColorHint">@color/hint_textL</item>
        <item name="colorAccent">@color/accentLogin</item>
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="buttonStyle">@style/LoginTheme.Button</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accentLogin</item>
    </style>
    <!-- Login button here -->
    <style name="LoginTheme.DialogFrameLayout" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="colorControlNormal">@color/accentL</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHint">@color/accentL</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
    </style>

    <style name="WelcomeTheme" parent="LoginTheme">
        <item name="android:textColorPrimary">@color/primary_textL</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary_textL</item>
    </style>
    <!-- Login Theme - END -->

    <!-- AppCompatDialog -->
    <style name="AppCompatDialogStyle.Light.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="AppCompatDialogStyle.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_textL</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">false</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>



    <style name="AppCompatDialogStyle.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:minWidth">@dimen/abc_dialog_fixed_width_major</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">#FFFFFF</item>
        <item name="windowNoTitle">false</item>
    </style>
    <!-- AppCompatDialog - END -->
</resources>