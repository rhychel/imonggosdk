<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:gravity="center"
        android:id="@+id/llMainContainer"
        android:background="@color/keypad_default_bg">

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tlContainer"
            android:layout_weight="1"
            android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clipToPadding="false"
            android:layout_marginRight="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:id="@+id/button7"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:id="@+id/button8"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:id="@+id/button9"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:weightSum="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:enabled="false"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/button0"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="00"
                android:id="@+id/button00"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="0dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:textColor="@color/keypad_button_text" />

        </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="2dp">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/ibtnMore"
                    android:src="@drawable/ic_menu"
                    android:background="@drawable/keypad_button"
                    android:tintMode="src_atop"
                    android:tint="@color/keypad_default_text"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/ibtnBksp"
                    android:src="@drawable/ic_backspace"
                    android:layout_weight="1"
                    android:background="@drawable/keypad_button"
                    android:tintMode="src_atop"
                    android:tint="@color/keypad_default_text" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ibtnGo"
                    android:src="@drawable/ic_check"
                    android:background="@drawable/keypad_button_circle"
                    android:tintMode="src_atop"
                    android:tint="@color/keypad_default_text"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:id="@+id/drawer">

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>