<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keypad_default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTextHolder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:padding="10dp"
            android:text="888,888,888.00"
            android:textColor="@color/keypad_default_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibtnBksp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/keypad_button"
            android:src="@drawable/ic_backspace"
            android:tint="@color/keypad_default_text" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tlButtonArea"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clipToPadding="false">

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="7"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="8"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="9"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="4"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="5"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="6"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="1"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="3"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="."
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button00"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/keypad_button"
                android:padding="0dp"
                android:text="00"
                android:textColor="@color/keypad_button_text"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtnCancel"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="start|bottom"
            android:background="@drawable/keypad_button"
            android:src="@drawable/ic_cross"
            android:tint="@color/keypad_default_text" />

        <ImageButton
            android:id="@+id/ibtnGo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:adjustViewBounds="true"
            android:background="@drawable/keypad_button_circle"
            android:src="@drawable/ic_check"
            android:tint="@color/keypad_default_text" />

        <ImageButton
            android:id="@+id/ibtnMore"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/keypad_button"
            android:src="@drawable/ic_menu"
            android:tint="@color/keypad_default_text" />
    </FrameLayout>

</LinearLayout>