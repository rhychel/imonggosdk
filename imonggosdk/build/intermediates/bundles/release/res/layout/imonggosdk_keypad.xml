<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="beforeDescendants"
    android:background="@color/keypad_default_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:gravity="center"
        android:id="@+id/llMainContainer"
        android:weightSum="4">

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tlContainer"
            android:layout_weight="1"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="7"
                    android:id="@+id/button7"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="8"
                    android:id="@+id/button8"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="9"
                    android:id="@+id/button9"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="."
                    android:id="@+id/buttonDot"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:enabled="false"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="0"
                    android:id="@+id/button0"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="00"
                    android:id="@+id/button00"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/keypad_button"
                    android:textColor="@color/keypad_button_text" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingBottom="5dp"
            android:id="@+id/llControls"
            android:weightSum="4">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/ibtnMore"
                android:src="@drawable/ic_menu"
                android:background="@drawable/keypad_button"
                android:tintMode="src_atop"
                android:tint="@color/keypad_default_text"
                android:layout_marginTop="5dp"
                />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/ibtnBksp"
                android:src="@drawable/ic_backspace"
                android:background="@drawable/keypad_button"
                android:tintMode="src_atop"
                android:tint="@color/keypad_default_text"
                android:layout_marginTop="5dp"
                />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/ibtnNegative"
                android:src="@drawable/ic_positive_scale"
                android:background="@drawable/keypad_button"
                android:tintMode="src_atop"
                android:tint="@color/keypad_default_text"
                android:layout_marginTop="5dp"
                />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ibtnGo"
                android:src="@drawable/ic_check"
                android:background="@drawable/keypad_button_circle"
                android:tintMode="src_atop"
                android:tint="@color/keypad_default_text"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:id="@+id/drawer">

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
