<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:animateLayoutChanges="true">

    <ImageButton
        android:layout_width="@dimen/sari_product_remove_button"
        android:layout_height="@dimen/sari_product_remove_button"
        android:id="@+id/ibtnDelete"
        android:src="@drawable/bs_ic_clear"
        android:background="@android:color/holo_red_light"
        android:padding="@dimen/sari_product_remove_button_padding"
        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/sari_product_remove_button"
        android:text="Sample Product"
        android:id="@+id/tvProductName"
        android:layout_weight="1"
        android:textSize="@dimen/sari_product_remove_fontsize"
        android:layout_marginLeft="@dimen/sari_items_padding"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sari_product_remove_button"
        android:text="Php 8,888.88"
        android:id="@+id/tvRetailPrice"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/sari_product_remove_fontsize"
        android:layout_marginLeft="@dimen/sari_items_padding"
        android:singleLine="true"
        android:layout_marginRight="@dimen/sari_items_padding"/>
</LinearLayout>