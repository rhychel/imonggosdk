<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:autofit="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llExpected"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:minHeight="29dp"
            android:gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvSubtotal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Expected"
                android:id="@+id/tvLabelExpected"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_weight="1"
                android:minWidth="100dp"/>

            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="888,888.88 PC"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvExpectedQuantity"
                android:gravity="center_vertical|right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="\@"
                android:id="@+id/at"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="P888,888.88"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tvExpectedPrice"
                android:gravity="left|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llActual"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:minHeight="29dp"
            android:gravity="bottom"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tvSubtotal"
            android:layout_below="@+id/llExpected">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Actual"
                android:id="@+id/tvLabelActual"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/tvLabelExpected"
                android:layout_weight="1"
                android:minWidth="100dp"/>

            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="888,888.88 PC"
                android:textSize="12sp"
                android:singleLine="true"
                android:id="@+id/tvActualQuantity"
                android:gravity="center_vertical|right"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="\@"
                android:id="@+id/at2"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="P888,888.88"
                android:textSize="12sp"
                android:singleLine="true"
                android:id="@+id/tvActualPrice"
                android:gravity="left|center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <me.grantland.widget.AutofitTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Php 888,888.88"
        android:textSize="15sp"
        android:singleLine="true"
        android:id="@+id/tvSubtotal"
        android:gravity="center|right"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        style="@style/TextView.ProductItem.Name"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>

</LinearLayout>